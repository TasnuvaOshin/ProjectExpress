<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_alignParentTop="true"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardBackgroundColor="#F4511E"
            app:cardElevation="26dp"
            app:cardMaxElevation="50dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Invoice Report List"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp" />


        </androidx.cardview.widget.CardView>

        <!--<TextView-->
            <!--android:id="@+id/title"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_marginTop="60dp"-->
            <!--android:gravity="center"-->
            <!--android:text="Invoice Report List"-->
            <!--android:textColor="#F4511E"-->
            <!--android:fontFamily="sans-serif-medium"-->
            <!--android:textSize="30dp" />-->

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/title">


            <RelativeLayout
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="60dp">

                <AutoCompleteTextView
                    android:paddingStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/et_back1"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="-99dp"
                    android:paddingVertical="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:hint="Start Date: mm/dd/yyyy"
                    android:textColor="#EB0E374B"
                    android:paddingLeft="15dp" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="-61dp"
                    app:srcCompat="@drawable/dropdown" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/date">

                <AutoCompleteTextView
                    android:paddingStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/et_back1"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="-99dp"
                    android:paddingVertical="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:hint="End Date: mm/dd/yyyy"
                    android:textColor="#EB0E374B"
                    android:paddingLeft="15dp" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="-61dp"
                    app:srcCompat="@drawable/dropdown" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/time">

                <AutoCompleteTextView
                    android:paddingStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/et_back1"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="-99dp"
                    android:paddingVertical="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:hint="Date"
                    android:textColor="#EB0E374B"
                    android:paddingLeft="15dp" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="-61dp"
                    app:srcCompat="@drawable/dropdown" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/b"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/a">

                <AutoCompleteTextView
                    android:paddingStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/et_back1"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="-99dp"
                    android:paddingVertical="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:hint="Collected"
                    android:textColor="#EB0E374B"
                    android:paddingLeft="15dp" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="-61dp"
                    app:srcCompat="@drawable/dropdown" />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/c"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/b">

                <AutoCompleteTextView
                    android:paddingStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/et_back1"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="-99dp"
                    android:paddingVertical="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:hint="Fees"
                    android:textColor="#EB0E374B"
                    android:paddingLeft="15dp" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="-61dp"
                    app:srcCompat="@drawable/dropdown" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/d"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/c">

                <AutoCompleteTextView
                    android:paddingStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/et_back1"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="-99dp"
                    android:paddingVertical="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:hint="Delivered"
                    android:textColor="#EB0E374B"
                    android:paddingLeft="15dp" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="-61dp"
                    app:srcCompat="@drawable/dropdown" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/e"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/d">

                <AutoCompleteTextView
                    android:paddingStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/et_back1"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="-99dp"
                    android:paddingVertical="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:hint="Returned"
                    android:textColor="#EB0E374B"
                    android:paddingLeft="15dp" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="-61dp"
                    app:srcCompat="@drawable/dropdown" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/f"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/e">

                <AutoCompleteTextView
                    android:paddingStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/et_back1"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="-99dp"
                    android:paddingVertical="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:hint="Paid"
                    android:textColor="#EB0E374B"
                    android:paddingLeft="15dp" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="-61dp"
                    app:srcCompat="@drawable/dropdown" />


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/rel1"
            android:paddingStart="60dp"
            android:paddingEnd="80dp"
            android:layout_marginBottom="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            >

            <Button
                android:layout_width="100dp"
                android:layout_height="44dp"
                android:layout_marginStart="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/et_back2"
                android:fontFamily="monospace"
                android:text="Download"
                android:textAllCaps="false"
                android:textColor="@color/white" />



        </RelativeLayout>


    </RelativeLayout>




</ScrollView>